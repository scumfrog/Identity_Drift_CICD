{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::ACCOUNT_ID:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
          "token.actions.githubusercontent.com:sub": "repo:scumfrog/Identity_Drift_CICD:ref:refs/heads/main",
          "token.actions.githubusercontent.com:job_workflow_ref": "scumfrog/Identity_Drift_CICD/.github/workflows/01-push.yml@refs/heads/main"
        }
      }
    }
  ]
}

